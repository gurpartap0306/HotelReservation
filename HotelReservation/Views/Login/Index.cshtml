@{
}
@model HotelReservation.Models.Users1

<body>
    <div class="container-fluid">
        <img src="~/images/logo.png" width="200" />
        <h1>Log in Your Account</h1>
        <br /><br /><br />
        <form method="post" asp-controller="Login" asp-action="Login">
            <div class="container-fluid">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <label asp-for="Email"></label>
                <input asp-for="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
                <br />
                <label asp-for="Password"></label>
                <input asp-for="Password" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
                <br /><br />
                <input type="submit" value="Login" style="width:300px;background-color:rebeccapurple;color:white;font-size:20px" />
            </div>
        </form>
        <br /><br />
        <a class="alert-link" asp-area="" asp-controller="Register" asp-action="Index">Not registered yet? Join Now!</a>
    </div>
</body>


@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}